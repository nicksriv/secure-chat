PORT=5000
MONGODB_URI=mongodb://localhost:27017/secure-chat
JWT_SECRET=your-jwt-secret-key-here

# Encryption Settings
# Must be a 32-character hex string (run scripts/generate-key.js to generate)
ENCRYPTION_KEY=your-32-character-hex-encryption-key

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# SMTP Configuration for password reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@securechat.com

OPENAI_API_KEY=your-openai-api-key